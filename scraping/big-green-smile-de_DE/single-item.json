{
  "site": "biggreensmile.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/search.aspx?q={request.query.itemId}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/search.aspx?q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "attribute-id": "content",
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "css-queries": [ "meta[property='og:url']" ]
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "overwrite": true,
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "bgs.{request.query.itemId}"
      }
    },
    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"gtin\": \"(.*?)\""
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".main-title #lblName" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ "img[itemprop=image]" ]
      }
    },
    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "separator": " ",
        "css-queries": [
          "span[itemprop=description] h3",
          "span[itemprop=description] p",
          ".product-desc p, .product-desc p span, .product-desc ul li"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "findest Du hier im.*": "findest du hier bei WeWanna shop!"
        },
        "css-queries": [ "meta[name=description]" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".new-price span" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".new-price span span", ".new-price span" ]
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "teaser images",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-images",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "unique": true,
        "css-queries": [ ".criteria-list-inner .cc-item img" ]
      }
    },
    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"Brand\".*?: \"(.*?)\""
        ]
      }
    },
    {
      "comment": "ingredients",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#divProductIngredients" ]
      }
    },
    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#divProductContents" ]
      }
    },

    {
      "comment": "reference unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "referenceUnit",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*?\/": "",
          "\\)": ""
        },
        "css-queries": [ "#lblPricePerUnit" ]
      }
    },
    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "replacements": {
          "\/.*": ""
        },
        "css-queries": [ "#lblPricePerUnit" ]
      }
    },
    {
      "comment": "price per unit",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },
    {
      "comment": "shopCategory",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "shopCategory",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".breadcrumbs li:last-child a" ]
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "brand",
          "description",
          "link",
          "mean",
          "gtin",
          "ingredients",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "referenceUnit",
          "shopCategory",
          "size",
          "seoDescription",
          "seoKeywords",
          "teaser-images",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
