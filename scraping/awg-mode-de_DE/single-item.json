{
  "site": "awg-mode.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/search?q=%22{request.query.itemId}%22"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "attribute-id": "href",
        "css-queries": [ "link[rel='canonical']" ]
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "awgmode.{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".productdetails__name" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-zoom",
        "replacements": {
          "w=.*": "w=600"
        },
        "css-queries": [ ".slider__content figure" ]
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-zoom",
        "css-queries": [ ".slider__content figure" ]
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "attribute-id": "data-zoom",
        "replacements": {
          "w=.*": "w=150"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "w=.*": "w=600"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": ". ",
        "css-queries": [ ".productdetails__articleinfos .grid__col_6_m ul li" ]
      }
    },

    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Au√üenmaterial.*?\\W.*\\W.*<li>\\W(.*?)\\W.*?<"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".productdetails__infos .productdetails__price" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".productdetails__infos del",
          ".productdetails__infos .productdetails__price"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "separator": "; ",
        "css-queries": [ ".productdetails__size-items label" ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sizes",
        "replacements": {
          "-": "/",
          "; \\+": ""
        },
        "value": "{sizes}"
      }
    },
    {
      "comment": "color",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".productdetails__color-items .productdetails__color-items--name" ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "separator": ", ",
        "css-queries": [ ".productdetails__color-items .productdetails__color-items--name" ]
      }
    },
    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "brand: '(.*?)'"
        ]
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "color",
          "colors",
          "brand",
          "description",
          "images-big",
          "images-small",
          "link",
          "material",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sizes",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
