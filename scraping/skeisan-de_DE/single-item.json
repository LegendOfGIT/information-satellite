{
  "site": "skeisan.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?q=\"{request.query.itemId}\"&type=product&options%5Bprefix%5D=last"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".card__heading a" ]
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://www.{template.site}{link}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "skeisan.{request.query.itemId}"
      }
    },
    {
      "comment": "SKU",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "\"gtin13\": (.*?),"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product__title h1" ]
      }
    },


    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "$":  "&width=650" },
        "css-queries": [ "meta[property='og:image:secure_url']" ]
      }
    },

    {
      "comment": "images big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".product__media img" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "unique": true,
        "replacements": {
          "width=.*": "width=650",
          "\/\/": "https://"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "unique": true,
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product__description p",
          ".product__description p span"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "Versandkostenfrei.*" : "" },
        "css-queries": [ "meta[property='og:description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product__info-wrapper .price__sale .price-item--sale",
          ".product__info-wrapper .price__regular .price-item--regular"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "mustContain": "€",
        "css-queries": [
          ".product__info-wrapper .price__sale .price-item--regular",
          ".product__info-wrapper .price__regular .price-item--regular"
        ]
      }
    },
    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "product-info .unit-price .price-item span"
        ]
      }
    },
    {
      "comment": "reference unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "referenceUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "product-info .unit-price .price-item span:last-child"
        ]
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "price per unit to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },

    {
      "comment": "country of Origin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "countryOfOrigin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Anbaugebiet.*?:(.*?)<",
          ">Anbaugebiet.*?:\\W(.*?)<.*?>",
          ">Anbaugebiet.*?:\\W(.*?)\\W<",
          ">Anbaugebiet.*?:.*?<.*?>\\W(.*?)<"
        ]
      }
    },
    {
      "comment": "type of taste",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "tasteType",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Tonalität.*?:.*?<.*?>(.*?)<",
          ">Tonalität.*?:(.*?)<.*?>.*?<"
        ]
      }
    },
    {
      "comment": "ingredients",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": ">Zutaten.*?:(.*?)(\\W)(.*?)<"
      }
    },
    {
      "comment": "important hints",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "importantHints",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": ">Wichtiger Hinweis.*?:(.*?)(\\W)(.*?)<"
      }
    },

    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "attribute-id": "value",
        "css-queries": [ "product-info .product__meta-item:nth-child(1) span" ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "attribute-id": "value",
        "separator": ", ",
        "css-queries": [ "product-info .product__meta-item:nth-child(1) span" ]
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{title} {size}"
      }
    },

    {
      "comment": "manufacturer",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "manufacturer",
        "value": "Skeisan"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "\"brand\":\"(.*?)\""
      }
    },

    {
      "comment": "is sustainable",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "isSustainable",
        "value": true
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".jdgm-prev-badge__text" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-score",
        "css-queries": [ ".jdgm-prev-badge__stars" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "brand",
          "countryOfOrigin",
          "description",
          "gtin",
          "images-big",
          "images-small",
          "importantHints",
          "ingredients",
          "isSustainable",
          "link",
          "manufacturer",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "referenceUnit",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizes",
          "sku",
          "tasteType",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
