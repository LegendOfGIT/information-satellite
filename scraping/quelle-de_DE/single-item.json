{
  "site": "quelle.de",

  "itemId": "{template.site}-{ean}",

  "scraping": [
    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "quelle-de_DE"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://www.{template.site}/p/{request.query.itemId}"
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "[data-testid='headline__component']" ]
      }
    },
    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "attribute-id": "href",
        "css-queries": [ "link[rel='canonical']" ]
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "overwrite": true,
        "uri": "{link}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".kMikPo span", ".bCaozJ span" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".gkDkCq", ".bCaozJ span" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "color",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "Farbe<.*?(cwljT|dcRYcK).*?>(.*?)<|Farbe<.*?cwljT.*?<div>(.*?)<",
          "Farbe<.*?(cwljT).*?<div>(.*?)<"
        ]
      }
    },

    {
      "comment": "sizes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "displayName\\\\\":\\\\\"Größe\\\\\".*?values.*?\\[(.*?)\\]"
        ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "sizes",
        "groupIndex": 1,
        "replacements": {
          ".*?\\(": "",
          "\\)": ""
        },
        "separator": "; ",
        "regex": [
          "displayText\\\\\":\\\\\"(.*?)\\\\\""
        ]
      }
    },

    {
      "comment": "colors",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "displayName\\\\\":\\\\\"Farbe\\\\\".*?values.*?\\[(.*?)\\]"
        ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "colors",
        "groupIndex": 1,
        "replacements": {
          ".*?\\(": "",
          "\\)": ""
        },
        "separator": ", ",
        "regex": [
          "displayText\\\\\":\\\\\"(.*?)\\\\\""
        ]
      }
    },

    {
      "comment": "lock-type",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "lock-type",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Art Verschluss<.*?cwljT.*?<div>(.*?)<"
        ]
      }
    },
    {
      "comment": "width-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Breite<.*?cwljT.*?<div>(.*?) cm<"
        ]
      }
    },
    {
      "comment": "width-in-cm to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "width-in-cm"
      }
    },
    {
      "comment": "height-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Höhe<.*?cwljT.*?<div>(.*?) cm<"
        ]
      }
    },
    {
      "comment": "height-in-cm to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "height-in-cm"
      }
    },
    {
      "comment": "depth-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Tiefe<.*?cwljT.*?<div>(.*?) cm<"
        ]
      }
    },
    {
      "comment": "depth-in-cm to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "depth-in-cm"
      }
    },

    {
      "comment": "length-in-m",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-m",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Länge<.*?cwljT.*?<div>(.*?) m<"
        ]
      }
    },
    {
      "comment": "length-in-m to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-m",
        "sourceContextId": "length-in-m"
      }
    },

    {
      "comment": "weight-in-kg",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "weightInKG",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Gewicht<.*?cwljT.*?<div>(.*?) kg<"
        ]
      }
    },
    {
      "comment": "weight-in-kg to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "weightInKG",
        "sourceContextId": "weightInKG"
      }
    },

    {
      "comment": "minimumAge",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>USK-Freigabe<.*?cwljT.*?<div>(.*?)<"
        ]
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge"
      }
    },

    {
      "comment": "genre",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "genre",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Spielgenre<.*?cwljT.*?<div>(.*?)<"
        ]
      }
    },
    {
      "comment": "model",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "model",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Modellbezeichnung<.*?cwljT.*?<div>(.*?)<"
        ]
      }
    },

    {
      "comment": "annual consumption in kWh",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "annualConsumptionInKWH",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Jährlicher Energieverbrauch<.*?cwljT.*?<div>(.*?) kWh<"
        ]
      }
    },
    {
      "comment": "annual consumption in kWh",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "annualConsumptionInKWH",
        "sourceContextId": "annualConsumptionInKWH"
      }
    },

    {
      "comment": "minimum energy efficiency class",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumEnergyEfficiencyClass",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "drvUIR.*?>Skala Energieeffizienzklasse<.*?cwljT.*?<div>(.*?) bis (.*?)<"
        ]
      }
    },
    {
      "comment": "maximum energy efficiency class",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "maximumEnergyEfficiencyClass",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "drvUIR.*?>Skala Energieeffizienzklasse<.*?cwljT.*?<div>(.*?) bis (.*?)<"
        ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "flags": "sg",
        "regex": [
          "\"description\": \"(.*?)\""
        ]
      }
    },

    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "<\/div><div>": ", ",
          "<\/div>": ""
        },
        "regex": [
          "drvUIR.*?>Material<.*?cwljT.*?<div>(.*?)(<div class|<span)",
          "drvUIR.*?>Material Gehäuse<.*?cwljT.*?<div>(.*?)(<div class|<span)"
        ]
      }
    },
    {
      "comment": "type of grinder",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "grinderType",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "<\/div><div>": ", ",
          "<\/div>": ""
        },
        "regex": [
          "drvUIR.*?>Art des Mahlwerks<.*?cwljT.*?<div>(.*?)(<div class|<span)"
        ]
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "quelle.{request.query.itemId}"
      }
    },
    {
      "comment": "ean",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ean",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "ean\\\\\":\\\\\"(.*?)\\\\\""
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ "[data-testid='thumbnail'] img" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "images-big",
        "replacements": {
          "\\?.*": ""
        }
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ "[data-testid='thumbnail'] img" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "replacements": {
          "\\?.*": ""
        },
        "css-queries": [ "[data-testid='thumbnail'] img" ]
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"reviewCount\": \"(.*?)\""
        ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"ratingValue\": \"(.*?)\""
        ]
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "brand\\\\\":.*?name\\\\\":\\\\\"(.*?)\\\\\""
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "annualConsumptionInKWH",
          "brand",
          "color",
          "colors",
          "description",
          "depth-in-cm",
          "ean",
          "genre",
          "grinderType",
          "height-in-cm",
          "images-big",
          "images-small",
          "length-in-m",
          "link",
          "lock-type",
          "material",
          "maximumEnergyEfficiencyClass",
          "mean",
          "model",
          "minimumAge",
          "minimumEnergyEfficiencyClass",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "ratingInPercent",
          "seoKeywords",
          "sizes",
          "title",
          "title-image",
          "weightInKG",
          "width-in-cm"
        ]
      }
    }
  ]
}
