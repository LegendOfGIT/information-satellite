{
  "site": "dress-for-less.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/search?q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".image-container > a" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://www.{template.site}{link}"
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "dfl.{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "head > title" ]
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "title",
        "groupIndex": 1,
        "regex": [
          "(.*) \\|"
        ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ "#pdpCarousel-0 .picture__image" ]
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-srcset",
        "css-queries": [ "ul.carousel-slide-items .carousel-slide-item .picture source" ]
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "sw=.*": "sw=150"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "sw=.*": "sw=450"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "color",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".color-value" ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Material: (.*?)</span>"
        ]
      }
    },
    {
      "comment": "model",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "model",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Modell: (.*?)</span>"
        ]
      }
    },
    {
      "comment": "fit",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "fit",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Passform: (.*?)</span>"
        ]
      }
    },
    {
      "comment": "fabric",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "fabric",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Stoff/Muster: (.*?)/.*?</span>"
        ]
      }
    },
    {
      "comment": "fabricPattern",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "fabricPattern",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Stoff/Muster: .*?/(.*?)</span>"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".priceinclude__savings .sales .value" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".priceinclude__promoitem .strike-through .value" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoKeywords",
        "value": "{title}, {fabric}, {fabricPattern}, {color}, {model}, {fit}, {material}"
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "color",
          "description",
          "fabric",
          "fabricPattern",
          "fit",
          "images-big",
          "images-small",
          "link",
          "material",
          "mean",
          "model",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
