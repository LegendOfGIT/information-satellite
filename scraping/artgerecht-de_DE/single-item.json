{
  "site": "artgerecht.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/search?search={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".product-image-wrapper a" ]
      }
    },

    {
      "comment": "single product view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },


    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "artgerecht.{request.query.itemId}"
      }
    },
    {
      "comment": "SKU",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:title']" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "/media/": "/thumbnail/",
          "\\.png":  "_500x500.png"
        },
        "css-queries": [ "meta[property='og:image']" ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          ".ag21-article-bgcolor--no .ag21-subsection--text > p",
          ".pos-2 .cms-element-text p"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".cms-element-buy-box .with-list-price", ".cms-element-buy-box .product-detail-price" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".cms-element-buy-box .list-price-price", ".cms-element-buy-box .product-detail-price" ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "replacements": { "\/.*": "" },
        "css-queries": [ ".cms-element-buy-box .price-unit-reference-content" ]
      }
    },
    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".ag21--pdp-weight" ]
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "price per unit to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },
    {
      "comment": "manufacturer",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "manufacturer",
        "value": "artgerecht GmbH"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"AggregateRating\".*?\"ratingCount\":(.*?)}"
        ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"AggregateRating\".*?\"ratingValue\":(.*?),"
        ]
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='keywords']" ]
      }
    },
    {
      "comment": "teaser-texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".ag21--pdp-usps ul li span" ]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "description",
          "link",
          "manufacturer",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "seoDescription",
          "seoKeywords",
          "size",
          "sku",
          "teaser-texts",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
