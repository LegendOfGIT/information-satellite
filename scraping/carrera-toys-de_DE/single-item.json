{
  "site": "carrera-toys.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://service.findologic.com/ps/centralized-frontend/index.php?shopkey=04770FCACF709F74A9DA3A395F58E48F&query=%22{request.query.itemId}%22&outputAdapter=JSON_1.0&outputAttrib[]=scale&outputAttrib[]=cat&outputAttrib[]=is_new"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "groupIndex": 1,
        "regex": [
          "\"url\":\"(.*?)\""
        ],
        "replacements": { "\\\\/": "/" }
      }
    },

    {
      "comment": "single product",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "carrera.{request.query.itemId}"
      }
    },

    {
      "comment": "sku",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sku",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"sku\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"product\":.*?\"name\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "width=.*": "width=650"
        },
        "css-queries": [ "meta[property='og:image']" ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"text_marketing_long\":\"(.*?)\""
        ],
        "replacements": {
          "\\\\r\\\\n": " "
        }
      }
    },

    {
      "comment": "brand",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "brand",
        "value": "Carrera"
      }
    },

    {
      "comment": "SEO description",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "value": "{description}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"product\":.*?\"price\":(.*?),"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"product\":.*?\"originalPrice\":(.*?),"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "multiplyBy": 0.01,
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "multiplyBy": 0.01,
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "images-big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "srcset",
        "css-queries": [ "#container-with-slick div picture source" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "width=.*": "width=650"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "teaser-texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#tabs-id ul li" ]
      }
    },
    {
      "comment": "batteryLifeInMinutes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "batteryLifeInMinutes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Fahrzeit:(.*?)min<"
        ]
      }
    },
    {
      "comment": "batteryLifeInMinutes",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "batteryLifeInMinutes",
        "sourceContextId": "batteryLifeInMinutes"
      }
    },
    {
      "comment": "batteryChargingTimeInMinutes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "batteryChargingTimeInMinutes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Ladezeit:(.*?)min<"
        ]
      }
    },
    {
      "comment": "batteryChargingTimeInMinutes",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "batteryChargingTimeInMinutes",
        "sourceContextId": "batteryChargingTimeInMinutes"
      }
    },
    {
      "comment": "maximumVelocityInKmh",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "maximumVelocityInKmh",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Bis zu (.*?)km\/h<"
        ]
      }
    },
    {
      "comment": "maximumVelocityInKmh",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "maximumVelocityInKmh",
        "sourceContextId": "maximumVelocityInKmh"
      }
    },
    {
      "comment": "length-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">LÃ¤nge: (.*?)cm<"
        ]
      }
    },
    {
      "comment": "length-in-cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">([0-9]{2})[\\+]<"
        ]
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge"
      }
    },

    {
      "comment": "contentsOfDelivery",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "contentsOfDelivery",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"productContents\":\\[(.*?)]\\}"
        ]
      }
    },
    {
      "comment": "contentsOfDelivery",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "contentsOfDelivery",
        "sourceContextId": "contentsOfDelivery",
        "groupIndex": 1,
        "regex": [
          "(.*?)\"alternativeProducts"
        ]
      }
    },
    {
      "comment": "contentsOfDelivery",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "contentsOfDelivery",
        "sourceContextId": "contentsOfDelivery",
        "groupIndex": 1,
        "separator": ", ",
        "regex": [
          "\"isDeveloperOnly\":.*?,\"name\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "amountInStock",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"product\":.*?\"stock\":(.*?),"
        ]
      }
    },
    {
      "comment": "amountInStock",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "amountInStock"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "amountInStock",
          "batteryChargingTimeInMinutes",
          "batteryLifeInMinutes",
          "brand",
          "contentsOfDelivery",
          "description",
          "images-big",
          "images-small",
          "length-in-cm",
          "link",
          "maximumVelocityInKmh",
          "mean",
          "minimumAge",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "teaser-texts",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
