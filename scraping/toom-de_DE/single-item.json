{
  "site": "toom.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/s/{request.query.itemId}/"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ "a[data-testid='m-product-teaser']" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}{link}"
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "toom.{request.query.itemId}"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "replacements": {
          "\\?.*?": "",
          "$": "?width=450"
        },
        "css-queries": [ ".image-gallery-image", "[data-testid='product-picture']" ]
      }
    },

    {
      "comment": "data properties",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "dataProperties",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-props",
        "decodeUri": true,
        "css-queries": [ "#root" ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "basic_info.*?name\":\"(.*?)\""
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".image-gallery-thumbnail-image", ".image-gallery-image" ]
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-small"
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "width=.*": "width=450"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "depth in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_tiefe.*?value\":\"(.*?) cm\""
      }
    },
    {
      "comment": "depth in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "depth-in-cm"
      }
    },

    {
      "comment": "width in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_breite.*?value\":\"(.*?) cm\""
      }
    },
    {
      "comment": "width in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "width-in-cm"
      }
    },

    {
      "comment": "height in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_hoehe.*?value\":\"(.*?) cm\""
      }
    },
    {
      "comment": "height in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "height-in-cm"
      }
    },



    {
      "comment": "length in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "title",
        "groupIndex": 3,
        "regex": ".* (.*? x) (.*? x) (.*? cm)"
      }
    },
    {
      "comment": "length in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".description__text, .description__text *", ".ac-description .ac-text" ]
      }
    },
    {
      "comment": "teaser texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".description__list .description__list-item" ]
      }
    },

    {
      "comment": "length in m",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-m",
        "sourceContextId": "description",
        "groupIndex": 2,
        "regex": "(l|L)Ã¤nge von(.*?) m\\."
      }
    },
    {
      "comment": "length in m",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-m",
        "sourceContextId": "length-in-m"
      }
    },

    {
      "comment": "suitable for",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "suitableFor",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "replacements": {
          "\\|": ", "
        },
        "regex": "mca_anwendungsbereich.*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "product type",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "productType",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_artikeltyp.*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "model",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "model",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_modell\".*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_material\".*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_marke\".*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "series",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "series",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "mca_serie\".*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "color",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "Farbe\".*?value\":\"(.*?)\""
      }
    },
    {
      "comment": "seoDescription",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "seoDescription",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "seoDescription",
        "groupIndex": 1,
        "regex": [
          "(.*?)Jetzt bei toom.*"
        ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='product:price:amount']" ]
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "meta_price\":(.*?)(,|})"
      }
    },

    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='product:price:amount']" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "dataProperties",
        "groupIndex": 1,
        "regex": "meta_price\":(.*?)(,|})"
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "title-image" ],
        "informationIds": [
          "brand",
          "color",
          "depth-in-cm",
          "description",
          "height-in-cm",
          "width-in-cm",
          "images-big",
          "images-small",
          "length-in-cm",
          "length-in-m",
          "link",
          "material",
          "mean",
          "model",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "productType",
          "seoDescription",
          "seoKeywords",
          "series",
          "suitableFor",
          "teaser-texts",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
