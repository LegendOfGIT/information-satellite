{
  "site": "store.steampowered.com",

  "itemId": "{site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/app/{request.query.itemId}?l=german"
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_area_purchase_game_wrapper:not(.dynamic_bundle_description) .discount_final_price", ".game_area_purchase_game_wrapper:not(.dynamic_bundle_description) .game_purchase_price" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_area_purchase_game_wrapper:not(.dynamic_bundle_description) .game_purchase_price", ".game_area_purchase_game_wrapper:not(.dynamic_bundle_description) .discount_original_price" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".apphub_AppName" ]
      }
    },
    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_description_snippet" ]
      }
    },
    {
      "comment": "developer",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "developer",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#developers_list a" ]
      }
    },
    {
      "comment": "publisher",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "publisher",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".dev_row:nth-of-type(2) a" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_header_image_full" ],
        "attribute-id": "src"
      }
    },
    {
      "comment": "images-small (116x65)",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".highlight_strip_item img" ],
        "attribute-id": "src"
      }
    },
    {
      "comment": "add 600x338 versions of images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "images-small",
        "replacements": {
          "116x65": "600x338"
        }
      }
    },
    {
      "comment": "tags",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "tags",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".popular_tags a" ]
      }
    },
    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "description",
          "developer",
          "images-big",
          "images-small",
          "price-current",
          "price-initial",
          "publisher",
          "tags",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
