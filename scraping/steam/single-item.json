{
  "site": "store.steampowered.com",

  "itemId": "{site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/app/{request.query.itemId}"
      }
    },
    {
      "comment": "current-price",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "current-price",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".discount_final_price" ]
      }
    },
    {
      "comment": "price",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".discount_original_price" ]
      }
    },
    {
      "comment": "current-price to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "current-price",
        "sourceContextId": "current-price"
      }
    },
    {
      "comment": "price to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price",
        "sourceContextId": "price"
      }
    },
    {
      "comment": "product-title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "product-title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".apphub_AppName" ]
      }
    },
    {
      "comment": "product-description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "product-description",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_description_snippet" ]
      }
    },
    {
      "comment": "developer",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "developer",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#developers_list a" ]
      }
    },
    {
      "comment": "publisher",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "publisher",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".dev_row:nth-of-type(2) a" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".game_header_image_full" ],
        "attribute-id": "src"
      }
    },
    {
      "comment": "product-images (116x65)",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "product-images",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".highlight_strip_item img" ],
        "attribute-id": "src"
      }
    },
    {
      "comment": "add 600x338 versions of product-images",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "product-images",
        "sourceContextId": "product-images",
        "replacements": {
          "116x65": "600x338"
        }
      }
    },
    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "current-price",
          "developer",
          "price",
          "product-description",
          "product-images",
          "product-title",
          "publisher",
          "title-image"
        ]
      }
    }
  ]
}
