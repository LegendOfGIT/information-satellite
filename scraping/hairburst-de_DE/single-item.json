{
  "site": "de.hairburst.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/search?q=\"{request.query.itemId}\"&type=product&options%5Bprefix%5D=last"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".s_result .p_card a" ]
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://{template.site}{link}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "hairburst.{request.query.itemId}"
      }
    },
    {
      "comment": "SKU",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "gtin12:\"(.*?)\","
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product_title" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "$":  "&width=650" },
        "css-queries": [ "meta[property='og:image:secure_url']" ]
      }
    },

    {
      "comment": "teaser texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "unique": true,
        "css-queries": [ ".product_benefits > li" ]
      }
    },

    {
      "comment": "images big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".owl-carousel .mobile_single_img img:first-child" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "unique": true,
        "replacements": {
          "$": "&width=650",
          "\/\/": "https://"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "unique": true,
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "video links",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "videoLinks",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".section_video video source" ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='description']" ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product_section_right .actual_price .money"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "mustContain": "€",
        "css-queries": [
          ".product_section_right .compared_price .money",
          ".product_section_right .actual_price .money"
        ]
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "country of origin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "countryOfOrigin",
        "value": "Großbritannien"
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{title} {size}"
      }
    },

    {
      "comment": "is vegan",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "isVegan",
        "sourceContextId": "single-product-view",
        "flags": "gi",
        "defaultValue": false,
        "setValueOnMatch": true,
        "regex": [
          "<p>vegan</p>"
        ]
      }
    },

    {
      "comment": "manufacturer",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "manufacturer",
        "value": "Hairburst"
      }
    },
    {
      "comment": "application instructions",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "applicationInstructions",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "[id *= 'how_to_use_video'] .section_content p"
        ]
      }
    },

    {
      "comment": "amount in stock",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "setValueOnMatch": 999,
        "setValueOnMiss": 0,
        "regex": "schema\\.org/InStock"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "Brand: \"(.*?)\""
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "rating information",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "rating-information",
        "uri": "https://api.reviews.io/timeline/data?type=product_review&store=fr.hairburst.com&sort=date_desc&page=1&per_page=1&sku={sku}%3B39374296875143&lang=DE&enable_avatars=true&variantFilter=1&include_subrating_breakdown=0"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "rating-information",
        "groupIndex": 1,
        "regex": "\"review_count\":(.*?)}"
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "rating-information",
        "groupIndex": 1,
        "regex": "\"average_rating\":\"(.*?)\""
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "von.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "amountInStock",
          "applicationInstructions",
          "brand",
          "countryOfOrigin",
          "description",
          "gtin",
          "images-big",
          "images-small",
          "isVegan",
          "link",
          "manufacturer",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "ratingInPercent",
          "seoDescription",
          "seoKeywords",
          "sku",
          "teaser-texts",
          "title",
          "title-image",
          "videoLinks"
        ]
      }
    }
  ]
}
