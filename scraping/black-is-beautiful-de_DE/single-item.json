{
  "site": "bisbshop.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/search?type=product&q=\"{request.query.itemId}\""
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".product__imageContainer > a" ]
      }
    },
    {
      "comment": "link",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "link",
        "groupIndex": 1,
        "regex": [
          "(.*?)\\?"
        ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://www.{template.site}{link}"
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "bisb.{request.query.itemId}"
      }
    },
    {
      "comment": "sku",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product_name" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-zoom-src",
        "css-queries": [ ".image__container .lazyload" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title-image",
        "value": "https:{title-image}"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name=description]" ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "value": "{description}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".price-ui .price--sale .money", ".price-ui .price .money" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".price-ui .compare-at-price .money",".price-ui .price .money" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "ingredients",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Inhaltsstoffe.*u003e(.*?)\\\\u003c"
        ]
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "description",
          "ingredients",
          "link",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
