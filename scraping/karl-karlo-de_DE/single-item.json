{
  "site": "karlkarlo.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://www.{template.site}/products/{request.query.itemId}"
      }
    },
    {
      "comment": "single product",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "karlka.{request.query.itemId}"
      }
    },
    {
      "comment": "sku",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sku",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"sku\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"gtin13\":(.*?),"
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product-block-title h1" ]
      }
    },

    {
      "comment": "images big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".feature-media-list li img" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "\/\/": "https://",
          "width=.*": "width=650"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "\/\/": "https://",
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-from-array",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          ".max-w-2xl p",
          ".max-w-2xl"
        ]
      }
    },
    {
      "comment": "SEO description",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "value": "{description}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [
          "meta[property='og:price:amount']"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [
          "meta[property='og:price:amount']"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "ingredients",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Zutaten:<.*?>(.*?)<\\/p>"
        ]
      }
    },
    {
      "comment": "brand",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "brand",
        "value": "Karl Karlo"
      }
    },
    {
      "comment": "countryOfOrigin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "countryOfOrigin",
        "value": "Deutschland"
      }
    },

    {
      "comment": "allergenic",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "allergenic",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "replacements": { "\\n": "" },
        "regex": [
          ">Allergene<((\\n|.)*?)<p .*?>((\\n|.)*?)<\\/p>"
        ]
      }
    },

    {
      "comment": "energyInKcal",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "energyInKcal",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": "kcal<\\/td>((\\n|.)*?)\\/(.*?)kcal"
      }
    },
    {
      "comment": "energyInKcal",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "energyInKcal",
        "sourceContextId": "energyInKcal"
      }
    },
    {
      "comment": "Weight in G",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "weightInG",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "quantity_value&quot;:&quot;(.*?)&quot;.*?quantity_unit&quot;:&quot;g&quot;"
        ]
      }
    },
    {
      "comment": "Weight in G",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "weightInG",
        "sourceContextId": "weightInG"
      }
    },
    {
      "comment": "teaser texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".pro-column .pro li p",
          ".shape-slideshow-text span"
        ]
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "allergenic",
          "brand",
          "countryOfOrigin",
          "description",
          "energyInKcal",
          "gtin",
          "images-big",
          "images-small",
          "ingredients",
          "link",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "teaser-texts",
          "title",
          "title-image",
          "weightInG"
        ]
      }
    }
  ]
}
