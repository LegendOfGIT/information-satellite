{
  "site": "littlehipstar.com",

  "itemId": "{template.site}-{gtin}",

  "scraping": [
    {
      "comment": "product search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?q=\"{request.query.itemId}\""
      }
    },
    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".product-card__image a" ]
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://www.{template.site}{link}"
      }
    },

    {
      "comment": "single product",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },
    {
      "comment": "variant",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "variant",
        "sourceContextId": "link",
        "groupIndex": 1,
        "regex": [
          "variant=(.*)"
        ]
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "littlehip.{request.query.itemId}"
      }
    },

    {
      "comment": "sku",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sku",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"sku\": \"(.*?)\""
        ]
      }
    },
    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "\"(gtin12|gtin13)\": \"(.*?)\","
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product__title" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\\\\/": "/",
          "\/\/":  "https://",
          "$": "&width=600"
        },
        "regex": "{variant}\".*?\"image\".*?.*?src\":\"(.*?)\""
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ ".product-tab__content p" ]
      }
    },
    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "description",
        "regex": [
          ".*\\."
        ]
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"brand\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "SEO description",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "value": "{description}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product__price .price-item--sale",
          ".product__price .price-item--regular"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product__price .price-item--regular"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "tagReplacer": " ",
        "regex": [
          "\"images\".*?\\[(.*?)\\]"
        ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "images-big",
        "groupIndex": 1,
        "regex": [
          "\"(.*?)\""
        ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "v=.*": "width=600",
          "\\\\/": "/",
          "\/\/":  "https://"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "color",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "name=\"Farbe\".*?\\s.*?value=\"(.*?)\"\\s.*?checked"
        ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "separator": ", ",
        "regex": [
          "name=\"Farbe\".*?\\s.*?value=\"(.*?)\""
        ]
      }
    },
    {
      "comment": "teaser-texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product-usp__text" ]
      }
    },

    {
      "comment": "Weight in KG",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "weightInKG",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Gewicht: ca\\.(.*) kg<"
        ]
      }
    },
    {
      "comment": "Weight in KG",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "weightInKG",
        "sourceContextId": "weightInKG"
      }
    },
    {
      "comment": "Material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Obermaterial: (.*)<",
          ">Material: (.*)<"
        ]
      }
    },
    {
      "comment": "Contents of delivery",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "contentsOfDelivery",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Im Lieferumfang: (.*)<",
          ">Im Set enthalten: (.*)<",
          ">Lieferumfang:<.*?>(.*)<"
        ]
      }
    },
    {
      "comment": "Width in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Größe: (.*) x (.*) x (.*)cm.*?<"
        ]
      }
    },
    {
      "comment": "Width in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "width-in-cm"
      }
    },
    {
      "comment": "Height in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          ">Größe: (.*) x (.*) x (.*)cm.*?<"
        ]
      }
    },
    {
      "comment": "Height in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "height-in-cm"
      }
    },
    {
      "comment": "Length in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": [
          ">Größe: (.*) x (.*) x (.*)cm.*?<"
        ]
      }
    },
    {
      "comment": "Length in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },


    {
      "comment": "Miniumum age",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Altersempfehlung:(.*)Jahr.*?<"
        ]
      }
    },
    {
      "comment": "Miniumum age",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "brand",
          "color",
          "colors",
          "contentsOfDelivery",
          "description",
          "gtin",
          "height-in-cm",
          "images-big",
          "images-small",
          "length-in-cm",
          "link",
          "material",
          "mean",
          "minimumAge",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "teaser-texts",
          "title",
          "title-image",
          "variant",
          "weightInKG",
          "width-in-cm"
        ]
      }
    }
  ]
}
