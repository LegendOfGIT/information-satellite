{
  "site": "timber-taste.de",

  "scraping": [
    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "timber-taste-de_DE"
      }
    },
    {
      "comment": "locale",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "locale",
        "value": "de-DE"
      }
    },
    {
      "comment": "usecase",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "usecase",
        "value": "single-item"
      }
    },
    {
      "comment": "navigation-path",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "navigation-path",
        "value": [
          "GROCERIES",
          "GROCERIES_FOOD",
          "GROCERIES_FOOD_OILSVINEGAR"
        ]
      }
    },

    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://www.{template.site}/collections/all?sort_by=created-descending"
      }
    },
    {
      "comment": "product ids",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "flags": "i",
        "regex": "{.*?öl.*?\"sku\":\"(.*?)\".*?}"
      }
    },
    {
      "comment": "product ids",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "product-ids",
        "replacements": {
          "SKU " : "",
          " SKU" : ""
        },
        "sourceContextId": "product-ids"
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    },

    {
      "comment": "random-page-number",
      "commandId": "generate-random-number",
      "parameters": {
        "contextId": "random-page-number",
        "maximum": "4"
      }
    },
    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "overwrite": true,
        "uri": "https://www.{template.site}/collections/all?page={random-page-number}"
      }
    },
    {
      "comment": "product ids",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "overwriteValues": true,
        "flags": "i",
        "regex": "{.*?öl.*?\"sku\":\"(.*?)\".*?}"
      }
    },
    {
      "comment": "product ids",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "product-ids",
        "replacements": {
          "SKU " : "",
          " SKU" : ""
        },
        "sourceContextId": "product-ids"
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    }
  ]
}
