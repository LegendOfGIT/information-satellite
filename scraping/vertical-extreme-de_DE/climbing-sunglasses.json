{
  "site": "verticalextreme.de",

  "scraping": [
    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "vertical-extreme-de_DE"
      }
    },
    {
      "comment": "locale",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "locale",
        "value": "de-DE"
      }
    },
    {
      "comment": "usecase",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "usecase",
        "value": "single-item"
      }
    },
    {
      "comment": "navigation-path",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "navigation-path",
        "value": [
          "SPORTS",
          "SPORTS_CLIMBING",
          "SPORTS_CLIMBING_SUNGLASSES"
        ]
      }
    },

    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://www.{template.site}/kletterbekleidung/sonnenbrillen-gletscherbrillen"
      }
    },

    {
      "comment": "product-ids",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "regex": [
          "'idListComma':'(.*?)'"
        ]
      }
    },
    {
      "comment": "product-ids",
      "commandId": "explode-values",
      "parameters": {
        "contextId": "product-ids"
      }
    },
    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    },

    {
      "comment": "random-page-number",
      "commandId": "generate-random-number",
      "parameters": {
        "contextId": "random-page-number",
        "minimum": 2,
        "maximum": 10
      }
    },
    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "overwrite": true,
        "uri": "https://www.{template.site}/kletterbekleidung/sonnenbrillen-gletscherbrillen?page={random-page-number}"
      }
    },
    {
      "comment": "product-ids",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "overwriteValues": true,
        "regex": [
          "'idListComma':'(.*?)'"
        ]
      }
    },
    {
      "comment": "product-ids",
      "commandId": "explode-values",
      "parameters": {
        "contextId": "product-ids"
      }
    },
    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    }
  ]
}
