{
  "site": "mytoys.de",

  "itemId": "{site}-{request.query.itemId}",

  "scraping": [
    {
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "article-search",
        "uri": "https://{template.site}/suche/{request.query.itemId}/"
      }
    },
    {
      "commandId": "visit-link-by-css-query",
      "parameters": {
        "contextId": "single-product-view",
        "sourceContextId": "article-search",
        "css-query": ".prod-tile__link"
      }
    },
    {
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "current-price",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".prod-info__price-reduced", ".prod-info__price-regular" ]
      }
    },
    {
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".prod-info__price-old", ".prod-info__price-regular" ]
      }
    },
    {
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "current-price",
        "sourceContextId": "current-price"
      }
    },
    {
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price",
        "sourceContextId": "price"
      }
    }
  ]
}
