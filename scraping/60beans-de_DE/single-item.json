{
  "site": "60beans.com",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?q=\"{request.query.itemId}\"&type=product&options%5Bprefix%5D=last"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".card__heading a" ]
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://www.{template.site}{link}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "60beans.{request.query.itemId}"
      }
    },
    {
      "comment": "SKU",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "gtin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "\"gtin13\": (.*?),"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product__title h1" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "$":  "&width=650" },
        "css-queries": [ "meta[property='og:image:secure_url']" ]
      }
    },

    {
      "comment": "images big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".product__media img" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "unique": true,
        "replacements": {
          "width=.*": "width=650",
          "\/\/": "https://"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "unique": true,
        "replacements": {
          "width=.*": "width=150"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [ ".product-info--grid .tab-item div *" ]
      }
    },
    {
      "comment": "description raw",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "descriptionRaw",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "removeTags": false,
        "regex": "'tab-item'.*?>((\\n|.)*?)<\\/div"
      }
    },
    {
      "comment": "description headlines",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "descriptions.headline",
        "flags": "gm",
        "sourceContextId": "descriptionRaw",
        "groupIndex": 1,
        "regex": [
          "<strong>(.*?)<\\/strong>",
          "<h2>(.*?)<\\/h2>"
        ]
      }
    },
    {
      "comment": "description content",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "descriptions.content",
        "flags": "gm",
        "sourceContextId": "descriptionRaw",
        "groupIndex": 1,
        "regex": [
          "<p>(.*?)<\\/p>"
        ]
      }
    },
    {
      "comment": "descriptions",
      "commandId": "zip-contexts-to-context",
      "parameters": {
        "contextId": "descriptions",
        "exchangeFromWhenEmpty": "headline",
        "exchangeToWhenEmpty": "content",
        "sourceContextIds": [ "descriptions.headline", "descriptions.content" ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "Versandkostenfrei.*" : "" },
        "css-queries": [ "meta[property='og:description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".product__info-wrapper .price__sale .price-item--sale",
          ".product__info-wrapper .price__regular .price-item--regular"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "mustContain": "€",
        "css-queries": [
          ".product__info-wrapper .price__sale .price-item--regular",
          ".product__info-wrapper .price__regular .price-item--regular"
        ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "groupIndex": 5,
        "regex": "unit-price((\\n|.)*?).*?price__last.*?((\\n|.)*?)<span>€(.*?)<\\/span>"
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "price per unit to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },

    {
      "comment": "country of origin",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "countryOfOrigin",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [ ".ingredient-label-origin a" ]
      }
    },

    {
      "comment": "type of taste",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "tasteType",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".ingredients-wrapper .ingredient-item a" ]
      }
    },

    {
      "comment": "flavours",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "flavours",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": ">Geschmacksnoten<((\\n|.)*?)<p.*?>(.*?)<\\/p>"
      }
    },
    {
      "comment": "Region of origin",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "regionOfOrigin",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "regex": ">Region<((\\n|.)*?)<p.*?>(.*?)<\\/p>"
      }
    },

    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "attribute-id": "value",
        "css-queries": [ ".product-form__input:has([name='package_size']) input[checked]" ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "separator": ", ",
        "unique": true,
        "regex": "package_size\\\":\\\"(.*?)\\\""
      }
    },

    {
      "comment": "manufacturer",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "manufacturer",
        "sourceContextId": "single-product-view",
        "groupIndex": 3,
        "tagReplacer": " ",
        "regex": ">Röster Addresse<((\\n|.)*?)<p.*?>(.*?)<\\/p>"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "Brand: \"(.*?)\""
      }
    },

    {
      "comment": "is sustainable",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "isSustainable",
        "sourceContextId": "single-product-view",
        "setValueOnMatch": true,
        "setValueOnMiss": false,
        "regex": "nachhaltig"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "brand",
          "countryOfOrigin",
          "description",
          "descriptions",
          "flavours",
          "gtin",
          "images-big",
          "images-small",
          "isSustainable",
          "link",
          "manufacturer",
          "mean",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "regionOfOrigin",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizes",
          "sku",
          "tasteType",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
