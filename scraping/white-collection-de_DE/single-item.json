{
  "site": "whitecollection.de",

  "itemId": "{template.site}-{sku}",

  "scraping": [
    {
      "comment": "product search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?type=product%2C&q=\"{request.query.itemId}\""
      }
    },
    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".grid__image" ]
      }
    },
    {
      "comment": "single product",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}{link}"
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "whitecol.{request.query.itemId}"
      }
    },
    {
      "comment": "sku",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".product-description-header" ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".product-single__thumbnail__wrapper img" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title-image",
        "replacements": {
          "//": "https://",
          "_[0-9]{2}.*?x\\.": "_450x."
        },
        "value": "{title-image}"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          ".product-description-wrapper *"
        ]
      }
    },
    {
      "comment": "SEO description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [
          "meta[itemprop='description']"
        ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".compare-at-price .money", "#price-field .money" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#price-field .money" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "images big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".product-single__thumbnail__wrapper img" ]
      }
    },
    {
      "comment": "images big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "//": "https://",
          "_[0-9]{2}.*?x\\.": "_450x."
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "_[0-9]{2}.*?x\\.": "_150x."
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoKeywords",
        "value": "{title}"
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "description",
          "images-big",
          "images-small",
          "link",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
