{
  "site": "taipanschmuck.de",

  "scraping": [

    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "taipan-de_DE"
      }
    },
    {
      "comment": "locale",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "locale",
        "value": "de-DE"
      }
    },
    {
      "comment": "usecase",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "usecase",
        "value": "single-item"
      }
    },
    {
      "comment": "navigation-path",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "navigation-path",
        "value": [
          "FASHION",
          "FASHION_MEN",
          "FASHION_MEN_JEWELRY"
        ]
      }
    },

    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://{template.site}/collections/ketten"
      }
    },
    {
      "comment": "product ids",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "overwrite": true,
        "unique": true,
        "regex": "\"sku\":\"(.*?)\""
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    },
    {
      "comment": "random-page-number",
      "commandId": "generate-random-number",
      "parameters": {
        "contextId": "random-page-number",
        "minimum": 2,
        "maximum": 3
      }
    },
    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://{template.site}/collections/ketten?page={random-page-number}"
      }
    },
    {
      "comment": "product ids",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "product-ids",
        "sourceContextId": "product-overview",
        "groupIndex": 1,
        "overwrite": true,
        "unique": true,
        "regex": "\"sku\":\"(.*?)\""
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    }
  ]
}
