{
  "site": "otto.de",

  "scraping": [
    {
      "comment": "random-item-number",
      "commandId": "generate-random-number",
      "parameters": {
        "contextId": "random-item-number",
        "maximum": "40"
      }
    },
    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://{template.site}/technik/gaming/playstation/spiele/?marke=playstation-4&l=l&o={random-item-number}"
      }
    },
    {
      "comment": "product-ids",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "product-ids",
        "css-queries": [ "#san_searchResult article"],
        "attribute-id": "data-productid",
        "sourceContextId": "product-overview"
      }
    },
    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "otto-de_DE"
      }
    },
    {
      "comment": "locale",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "locale",
        "value": "de-DE"
      }
    },
    {
      "comment": "usecase",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "usecase",
        "value": "single-item"
      }
    },
    {
      "comment": "navigation-path",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "navigation-path",
        "value": [
          "MULTIMEDIA",
          "MULTIMEDIA_GAMES",
          "MULTIMEDIA_GAMES_PLAYSTATION_4"
        ]
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    }
  ]
}
