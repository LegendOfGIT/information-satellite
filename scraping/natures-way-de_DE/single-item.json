{
  "site": "naturesway.de",

  "itemId": "{template.site}-{gtin}",

  "scraping": [
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://{template.site}/shop/{request.query.itemId}"
      }
    },

    {
      "comment": "single product view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },


    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "naturesway.{request.query.itemId}"
      }
    },
    {
      "comment": "sku",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "sku",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-sku",
        "css-queries": [ ".shop-analytics-single-product-details" ]
      }
    },
    {
      "comment": "gtin",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "gtin",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-gtin",
        "css-queries": [ ".shop-analytics-single-product-details" ]
      }
    },
    {
      "comment": "amount in stock",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-stock",
        "css-queries": [ ".shop-analytics-single-product-details" ]
      }
    },

    {
      "comment": "big images",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-thumb",
        "replacements": {
          "[0-9]{3}x[0-9]{3}": "600x600"
        },
        "css-queries": [ ".woocommerce-product-gallery__image" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "[0-9]{3}x[0-9]{3}": "600x600"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "[0-9]{3}x[0-9]{3}": "300x300"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-from-array",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:title']" ]
      }
    },


    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [
          "meta[property='og:description']"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:description']" ]
      }
    },

    {
      "comment": "description headlines",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "descriptions.headline",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".woocommerce-Tabs-panel--description p strong .a-list-item, .woocommerce-Tabs-panel--description p strong" ]
      }
    },
    {
      "comment": "description contents",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "descriptions.content",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".woocommerce-Tabs-panel--description p > .a-list-item" ]
      }
    },
    {
      "comment": "descriptions",
      "commandId": "zip-contexts-to-context",
      "parameters": {
        "contextId": "descriptions",
        "exchangeFromWhenEmpty": "headline",
        "exchangeToWhenEmpty": "content",
        "sourceContextIds": [ "descriptions.headline", "descriptions.content" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-price",
        "css-queries": [ ".shop-analytics-single-product-details" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-price",
        "css-queries": [ ".shop-analytics-single-product-details" ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".price-per-unit bdi" ]
      }
    },
    {
      "comment": "reference unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "referenceUnit",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*?\/": "",
          "\\)": ""
        },
        "css-queries": [ ".price-per-unit" ]
      }
    },

    {
      "comment": "ingredients",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#tab-zutaten p" ]
      }
    },

    {
      "comment": "size",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "$": " Stück"
        },
        "regex": [
          "attributes-item__label\">Inhalt in.*?<\\/.*?\\W.*?<td.*?<p>(.*?)<\\/p>"
        ]
      }
    },
    {
      "comment": "intake type",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "intakeType",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "attributes-item__label\">Darreichungsform.*?<\\/.*?\\W.*?<td.*?<p>(.*?)<\\/p>"
        ]
      }
    },

    {
      "comment": "amount in Stock",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "amountInStock"
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "price per unit to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },
    {
      "comment": "manufacturer",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "manufacturer",
        "value": "Nature’s Way Europe GmbH"
      }
    },

    {
      "comment": "review data",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "review-data",
        "uri": "https://api.reviews.io/json-ld/product/richsnippet?store=www.{template.site}&sku={sku}&data=true&mpn="
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "review-data",
        "groupIndex": 1,
        "regex": [
          "\"reviewCount\" : \"(.*?)\""
        ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "review-data",
        "groupIndex": 1,
        "regex": [
          "\"ratingValue\" : \"(....).*?\","
        ]
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "teaser-texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".woocommerce-product-details__short-description li" ]
      }
    },
    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "amountInStock",
          "description",
          "descriptions",
          "images-big",
          "images-small",
          "ingredients",
          "intakeType",
          "link",
          "manufacturer",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "referenceUnit",
          "seoDescription",
          "seoKeywords",
          "size",
          "sku",
          "teaser-texts",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
