{
  "site": "naturesway.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?type=product&options%5Bprefix%5D=last&options%5Bunavailable_products%5D=last&q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "css-queries": [ ".product-item__image-wrapper a"],
        "attribute-id": "href",
        "replacements": {
          "^": "https://www.naturesway.de"
        },
        "sourceContextId": "product-search"
      }
    },

    {
      "comment": "single product view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },


    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "naturesway.{request.query.itemId}"
      }
    },
    {
      "comment": "sku",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "sku",
        "value": "{request.query.itemId}"
      }
    },
    {
      "comment": "amount in stock",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "setValueOnMatch": 0,
        "setValueOnMiss": 999,
        "regex": "OutOfStock"
      }
    },

    {
      "comment": "big images",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "mustNotContain": "_small.",
        "css-queries": [ ".product__media-image-wrapper img" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "^": "https:",
          "[0-9]{4}x": "650x"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "[0-9]{3}x": "300x"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-from-array",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:title']" ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\": \"(.*?)\",\n"
        ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[property='og:description']" ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-price",
        "css-queries": [ ".block-swatch__radio:checked + .block-swatch__item .main-price-custom" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "attribute-id": "data-price",
        "css-queries": [
          ".block-swatch__radio:checked + .block-swatch__item .comapre-price-custom",
          ".block-swatch__radio:checked + .block-swatch__item .main-price-custom"
        ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".block-swatch__radio:checked + .block-swatch__item .upper-class-data2" ]
      }
    },
    {
      "comment": "reference unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "referenceUnit",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*?\/": "",
          "\\)": ""
        },
        "css-queries": [ ".block-swatch__radio:checked + .block-swatch__item .upper-class-data2" ]
      }
    },

    {
      "comment": "ingredients",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "Zutaten(\\n|.)*?metafield-multi_line_text_field.*?>(.*?)<\\/"
        ]
      }
    },
    {
      "comment": "important hints",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "importantHints",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "replacements": { "\\n" : ""},
        "regex": [
          "Aufbewahrungs- & Verwendungshinweise(\\n|.)*?metafield-multi_line_text_field.*?>((\\n|.)*?)<\\/"
        ]
      }
    },
    {
      "comment": "video links",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "videoLinks",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "unique": true,
        "flags": "g",
        "regex": [
          "src=\"(.*?.mp4)\""
        ]
      }
    },

    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "attribute-id": "value",
        "css-queries": [ ".block-swatch__radio:checked" ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "attribute-id": "value",
        "separator": ", ",
        "css-queries": [ ".block-swatch__radio" ]
      }
    },

    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "price per unit to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },
    {
      "comment": "manufacturer",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "manufacturer",
        "value": "Natureâ€™s Way Europe GmbH"
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{title} - {size}"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "amountInStock",
          "description",
          "images-big",
          "images-small",
          "importantHints",
          "ingredients",
          "link",
          "manufacturer",
          "mean",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "referenceUnit",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizes",
          "sku",
          "title",
          "title-image",
          "videoLinks"
        ]
      }
    }
  ]
}
