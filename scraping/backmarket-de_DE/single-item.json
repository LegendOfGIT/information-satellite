{
  "site": "backmarket.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single product view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/de-de/p/a/{request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "attribute-id": "href",
        "css-queries": [ "link[rel='canonical']" ]
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "backmar.{request.query.itemId}"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "head > title" ]
      }
    },
    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "replacements": {
          "\\|.*": ""
        },
        "value": "{title}"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='og:image']" ]
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ "div[data-test='carousel'] ul li img" ]
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "/cdn-cgi": "https://backmarket.de/cdn-cgi",
          "width%3D.*?\/": "width%3D150/"
        },
        "unique": true,
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          "width%3D.*?\/": "width%3D400/"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": "; ",
        "css-queries": [ "span[data-selector='pp-text'] ul li span" ]
      }
    },
    {
      "comment": "description",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "description",
        "replacements": {
          ":;": ":"
        },
        "value": "{description}"
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name='description']" ]
      }
    },
    {
      "comment": "seoDescription",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "replacements": {
          "gebraucht bis.*": ""
        },
        "value": "{seoDescription}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ "div[data-test='normal-price']" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "priceWhenNew(.*?),curr"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ "button[data-test='product-page-reviews-count'] .ml-2" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "css-queries": [ "button[data-test='product-page-reviews-count'] .ml-1" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "/.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "colors",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Farbe :(.*?);"
        ]
      }
    },
    {
      "comment": "bluetooth version",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "bluetoothVersion",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Bluetooth-Version :(.*?);"
        ]
      }
    },
    {
      "comment": "model",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "model",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Modell :(.*?);"
        ]
      }
    },
    {
      "comment": "series",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "series",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Serie :(.*?);"
        ]
      }
    },
    {
      "comment": "noiseCanceling",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "noiseCanceling",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Rauschunterdrückung :(.*?);"
        ]
      }
    },
    {
      "comment": "chargingPortType",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "chargingPortType",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Ladeanschluss :(.*?);",
          "Anschlüsse :(.*?);"
        ]
      }
    },
    {
      "comment": "processor",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "processor",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Prozessor :(.*?);"
        ]
      }
    },
    {
      "comment": "voice assistant",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "voiceAssistant",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Sprachassistent :(.*?);"
        ]
      }
    },
    {
      "comment": "generation",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "generation",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Generation :(.*?);"
        ]
      }
    },
    {
      "comment": "screensize in inch",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "screensizeInInch",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Bildschirmgröße.*?:(.*?);"
        ]
      }
    },
    {
      "comment": "screensize in inch",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "screensizeInInch",
        "sourceContextId": "screensizeInInch"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Marke :(.*?);"
        ]
      }
    },
    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "[m|M]aterial :(.*?);"
        ]
      }
    },
    {
      "comment": "storageSize",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "storageSize",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Speicherkapazität :(.*?);"
        ]
      }
    },
    {
      "comment": "operation system",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "operationSystem",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Betriebssystem :(.*?);"
        ]
      }
    },
    {
      "comment": "dual sim",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "dualSim",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Dual-SIM :(.*?);"
        ]
      }
    },
    {
      "comment": "resolution",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "resolution",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Auflösung :(.*?);"
        ]
      }
    },
    {
      "comment": "processorSpeed",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "processorSpeed",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "CPU-Geschwindigkeit :(.*?);"
        ]
      }
    },
    {
      "comment": "ramSize",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ramSize",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Arbeitsspeicher.*?:(.*?);"
        ]
      }
    },

    {
      "comment": "weight in G",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "weightInG",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Gewicht :(.*?) g"
        ]
      }
    },
    {
      "comment": "weight in G",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "weightInG",
        "sourceContextId": "weightInG"
      }
    },
    {
      "comment": "height in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Höhe :(.*?) cm;"
        ]
      }
    },
    {
      "comment": "height in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "height-in-cm"
      }
    },
    {
      "comment": "width in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Breite :(.*?) cm;"
        ]
      }
    },
    {
      "comment": "width in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "width-in-cm"
      }
    },
    {
      "comment": "depth in cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "description",
        "groupIndex": 1,
        "regex": [
          "Tiefe :(.*?) cm"
        ]
      }
    },
    {
      "comment": "depth in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "depth-in-cm"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "bluetoothVersion",
          "brand",
          "chargingPortType",
          "colors",
          "depth-in-cm",
          "description",
          "dualSim",
          "generation",
          "height-in-cm",
          "images-big",
          "images-small",
          "link",
          "material",
          "mean",
          "model",
          "numberOfRatings",
          "noiseCanceling",
          "operationSystem",
          "price-current",
          "price-initial",
          "processor",
          "processorSpeed",
          "ramSize",
          "ratingInPercent",
          "resolution",
          "screensizeInInch",
          "seoDescription",
          "seoKeywords",
          "series",
          "storageSize",
          "title",
          "title-image",
          "voiceAssistant",
          "weightInG",
          "width-in-cm"
        ]
      }
    }
  ]
}
