{
  "site": "shop-apotheke.com",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/search.htm?q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "attribute-id": "content",
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "css-queries": [ "meta[property='og:url']" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "shopapo.{request.query.itemId}"
      }
    },
    {
      "comment": "ean",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ean",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"ean\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "head > title" ]
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "title",
        "groupIndex": 1,
        "regex": [
          "(.*) -"
        ]
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "srcset",
        "css-queries": [ "[data-qa-id*='product-image'] picture img" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          " 400w.*": "",
          "400x0": "600x0"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "600x0": "150x0"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-from-array",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ "[class *= 'ProductHeadRatingAndQuestions_old_product-head-rating-and-questions__link']" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "css-queries": [ "[class *= 'ProductReviewsRatingSummary_old_product-reviews-rating-summary__average-rating___']" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "von.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".accordion-details .prose p" ]
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ "[class *= 'ProductBuyBox_old_product-buy-box__inner'] [class *= 'ProductPageVariantDetails_old_product-page-variant-details__display-price']" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "[class *= 'ProductBuyBox_old_product-buy-box__inner'] [class *= 'ProductPageVariantDetails_old_product-page-variant-details__strike-through-price']",
          "[class *= 'ProductBuyBox_old_product-buy-box__inner'] [class *= 'ProductPageVariantDetails_old_product-page-variant-details__display-price']"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "size",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Packungsgröße:(.*?)<"
        ]
      }
    },
    {
      "comment": "size in ml",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sizeInMl",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          ">Packungsgröße:(.*?) ml<"
        ]
      }
    },
    {
      "comment": "size in ml",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "sizeInMl",
        "sourceContextId": "sizeInMl"
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "replacements": { "\/.*": "" },
        "css-queries": [
          "[data-qa-id='current-variant-price-per-unit']"
        ]
      }
    },
    {
      "comment": "price per unit",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },

    {
      "comment": "manufacturer",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "manufacturer",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "manufacturer\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "intakeType",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "intakeType",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "pharmaForm\":\"(.*?)\"",
          "<dt.*?>Darreichung<.*?<dd.*?>(.*?)<"
        ]
      }
    },

    {
      "comment": "ingredients",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ingredients",
        "sourceContextId": "single-product-view",
        "separator": ", ",
        "css-queries": [ ".accordion-details:has([class*='ProductDescriptionIngredientsSection']) ul li" ]
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "title-image" ],
        "informationIds": [
          "description",
          "link",
          "images-big",
          "images-small",
          "ingredients",
          "intakeType",
          "manufacturer",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizeInMl",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
