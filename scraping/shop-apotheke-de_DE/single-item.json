{
  "site": "shop-apotheke.com",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/search.htm?q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "attribute-id": "content",
        "contextId": "link",
        "sourceContextId": "single-product-view",
        "css-queries": [ "meta[property='og:url']" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "shopapo.{request.query.itemId}"
      }
    },
    {
      "comment": "ean",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ean",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"ean\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "head > title" ]
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "title",
        "groupIndex": 1,
        "regex": [
          "(.*) -"
        ]
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "href",
        "css-queries": [ ".o-Gallery__image" ]
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "srcset",
        "css-queries": [ ".o-SliderHorizontal__item .a-ResponsiveImage__img" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          ".*?70w,": "",
          " 93w.*": "",
          "93x": "600x"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "600x": "450x"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ "div[data-qa-id='product-rating'] .m-StarRating__superscript" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "css-queries": [ "div[data-qa-id='product-rating'] .a-visuallyhidden" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "von.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },
    {
      "comment": "seoDescription",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "\"description\":\"(.*?)\""
        ]
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "entry-price.*?(<span.*?>)(.*?)<"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "groupIndex": 2,
        "regex": [
          "a-PriceOld--price.*?(<span.*?>)(.*?)<",
          "entry-price.*?(<span.*?>)(.*?)<"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "title-image" ],
        "informationIds": [
          "description",
          "link",
          "ean",
          "images-big",
          "images-small",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "ratingInPercent",
          "seoDescription",
          "seoKeywords",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
