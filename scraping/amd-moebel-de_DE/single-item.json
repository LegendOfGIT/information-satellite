{
  "site": "amd-moebel.de",

  "itemId": "{template.site}-{ean}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://www.{template.site}/search?q=\"{request.query.itemId}\""
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "attribute-id": "href",
        "css-queries": [ ".search-result a" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://www.{template.site}{link}"
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },

    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "amdmoebel.{request.query.itemId}"
      }
    },

    {
      "comment": "sku",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sku",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "sku\":\"(.*?)\""
      }
    },
    {
      "comment": "ean",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ean",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#barcode" ]
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": "brand\":\"(.*?)\""
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "head > title" ]
      }
    },
    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "replacements": {
          "[ ]+":  " ",
          "\\|.*": ""
        },
        "value": "{title}"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": { "[0-9]+x[0-9]+" :  "600x600" },
        "css-queries": [ "meta[property='og:image:secure_url']" ]
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "single-product-view",
        "attribute-id": "srcset",
        "css-queries": [ ".product-medias__thumbnails .responsive-image-wrapper img" ]
      }
    },
    {
      "comment": "images-big",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "replacements": {
          " [0-9]+w.*":  "",
          "[0-9]+x": "600x",
          "\/\/": "https://"
        },
        "sourceContextId": "images-big"
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "[0-9]+x": "150x"
        },
        "sourceContextId": "images-big"
      }
    },

    {
      "comment": "height in cm",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#hoehe" ]
      }
    },
    {
      "comment": "height in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "height-in-cm",
        "sourceContextId": "height-in-cm"
      }
    },

    {
      "comment": "width in cm",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#breite" ]
      }
    },
    {
      "comment": "width in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "width-in-cm",
        "sourceContextId": "width-in-cm"
      }
    },

    {
      "comment": "length in cm",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#laenge" ]
      }
    },
    {
      "comment": "length in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },

    {
      "comment": "depth in cm",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#tiefe" ]
      }
    },
    {
      "comment": "depth in cm",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "depth-in-cm",
        "sourceContextId": "depth-in-cm"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          ".MsoNormal:not(:first-child) b, .MsoNormal",
          ".pdl strong, .pdr strong, .pdr p",
          ".accordion-content .rte p strong, .accordion-content .rte p"
        ]
      }
    },

    {
      "comment": "SEO description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "Versand gratis.*" : "",
          "bei AMD Möbel.*": "bei WeWanna shop!"
        },
        "css-queries": [ "meta[name='description']" ]
      }
    },
    {
      "comment": "SEO description",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "seoDescription",
        "replacements": {
          "[ ]+": " ",
          "Jetzt bei.*": ""
        },
        "value": "{seoDescription}"
      }
    },

    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ "[itemprop='price'] .money" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#ComparePrice .money", "[itemprop='price'] .money" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "color",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#farbe" ]
      }
    },

    {
      "comment": "material",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#material" ]
      }
    },

    {
      "comment": "type of wood",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "woodType",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#holzart" ]
      }
    },

    {
      "comment": "teaser texts",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "teaser-texts",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".short-description-bulletpoint" ]
      }
    },

    {
      "comment": "amount in stock",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "setValueOnMatch": 999,
        "setValueOnMiss": 0,
        "regex": "Verfügbarkeit:.*?((\\n|.)*?)<b>Lieferbar<\\/b>"
      }
    },

    {
      "comment": "extendable",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "extendable",
        "sourceContextId": "single-product-view",
        "setValueOnMatch": true,
        "setValueOnMiss": false,
        "regex": "ausziehbar"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "sku" ],
        "informationIds": [
          "amountInStock",
          "brand",
          "color",
          "description",
          "depth-in-cm",
          "ean",
          "extendable",
          "height-in-cm",
          "images-big",
          "images-small",
          "length-in-cm",
          "link",
          "material",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "sku",
          "teaser-texts",
          "title",
          "title-image",
          "width-in-cm",
          "woodType"
        ]
      }
    }
  ]
}
