{
  "site": "shop24direct.de",

  "itemId": "{template.site}-{ean}",

  "scraping": [
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/catalogsearch/result/?filter=&q={request.query.itemId}"
      }
    },

    {
      "comment": "link",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "link",
        "sourceContextId": "product-search",
        "mustContain": "{request.query.itemId}",
        "attribute-id": "href",
        "css-queries": [ ".grid-item a" ]
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}{link}"
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "{current-uri}"
      }
    },
    {
      "comment": "ean",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "ean",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<th.*EAN.*\\s.*<td>(.*?)<\\/td>"
        ]
      }
    },

    {
      "comment": "amount of media",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountOfMedia",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<th.*Anzahl der Medien.*\\s.*<td.*?>(.*?)<\\/td>"
        ]
      }
    },
    {
      "comment": "amount of media to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "amountOfMedia",
        "sourceContextId": "amountOfMedia"
      }
    },

    {
      "comment": "amount of songs",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountOfSongs",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<th.*Titelanzahl.*\\s.*<td.*?>(.*?)<\\/td>"
        ]
      }
    },
    {
      "comment": "amount of songs to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "amountOfSongs",
        "sourceContextId": "amountOfSongs"
      }
    },

    {
      "comment": "playtime length in minutes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "playtimeLengthInMinutes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<th.*Spielzeit.*\\s.*<td.*?>(.*?)<\\/td>"
        ]
      }
    },
    {
      "comment": "playtime length in minutes to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "playtimeLengthInMinutes",
        "sourceContextId": "playtimeLengthInMinutes"
      }
    },

    {
      "comment": "interpret",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "interpret",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<th.*Interpret.*\\s.*<td><a.*?>(.*?)<\\/a>"
        ]
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".page-title > h1" ]
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "title",
        "value": "{interpret} - {title}"
      }
    },

    {
      "comment": "title-image",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "single-product-view",
        "attribute-id": "src",
        "css-queries": [ ".product-image" ]
      }
    },
    {
      "comment": "title-image",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title-image",
        "value": "https:{title-image}"
      }
    },
    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".long-description" ]
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".old-price", ".price" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".price" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "amountOfMedia",
          "amountOfSongs",
          "description",
          "ean",
          "interpret",
          "link",
          "playtimeLengthInMinutes",
          "price-current",
          "price-initial",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
