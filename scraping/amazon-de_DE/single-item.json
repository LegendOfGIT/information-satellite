{
  "site": "amazon.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://{template.site}/dp/{request.query.itemId}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://{template.site}/dp/{request.query.itemId}"
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#priceblock_ourprice" ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".priceBlockStrikePriceString", "#priceblock_ourprice" ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#productTitle" ]
      }
    },
    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#feature-bullets .a-list-item" ]
      }
    },
    {
      "comment": "color-images",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color-images",
        "sourceContextId": "single-product-view",
        "css-queries": [ "script" ],
        "mustContain": "'colorImages'"
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "color-images",
        "regex": "(https.*.jpg).*MAIN"
      }
    },
    {
      "comment": "images-small (116x65)",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".highlight_strip_item img" ],
        "attribute-id": "src"
      }
    },
    {
      "comment": "add 600x338 versions of images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "images-small",
        "replacements": {
          "116x65": "600x338"
        }
      }
    },
    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "description",
          "images-big",
          "images-small",
          "link",
          "price-current",
          "price-initial",
          "title",
          "title-image"
        ]
      }
    }
  ]
}
