{
  "site": "amazon.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "azo.{request.query.itemId}"
      }
    },
    {
      "comment": "asin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "asin",
        "value": "{request.query.itemId}"
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://{template.site}/dp/{request.query.itemId}?th=1&psc=1"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*von": "",
          ".*ab":  "",
          "€": ""
        },
        "css-queries": [
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".priceToPay .a-offscreen",
          "#corePrice_desktop .a-price > span",
          "#price",
          "#style_name_1_price .olpWrapper",
          "#ppd .a-price-whole"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*von": "",
          ".*ab":  "",
          "€": ""
        },
        "css-queries": [
          ".priceBlockStrikePriceString",
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".basisPrice .a-offscreen",
          "#corePrice_desktop .a-price > span",
          ".priceToPay .a-offscreen",
          "#price",
          "#style_name_1_price .olpWrapper",
          "#ppd .a-price-whole"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#productTitle" ]
      }
    },
    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#inline-twister-dim-title-size_name #inline-twister-expanded-dimension-text-size_name" ]
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{title} {size}"
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "Amazon\\.de.*? - ": "",
          " - Kostenloser Versand.*": "",
          "bei Amazon.*": "bei WeWanna shop!",
          ": Amazon.*": "",
          "Gratis Lieferung ab.*": "",
          "günstig auf Amazon.*": ""
        },
        "css-queries": [ "meta[name=description]" ]
      }
    },
    {
      "comment": "author",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "author",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".author a" ]
      }
    },
    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{author} {title}"
      }
    },

    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#acrCustomerReviewText" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "attribute-id": "title",
        "css-queries": [ ".reviewCountTextLinkedHistogram" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "von.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "usk-age",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<span>.*USK ab(.*)<\/span>",
          "Altersspektrum.*?<\\/span>.*?<span.*?>(.*?)-.*?<\\/span>"
        ]
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Marke<.*?<span.*?>(.*?)<\\/span>",
          "Marke<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Marke.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "suitableFor",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "suitableFor",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Zielgruppe<.*?<span.*?>(.*?)<\\/span>",
          "Zielgruppe<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Zielgruppe.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "scent",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "scent",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Duft<.*?<span.*?>(.*?)<\\/span>",
          "Duft<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Duft.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "color",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "color",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\"": " "
        },
        "regex": [
          "selected_variations.*?color_name\":\"(.*?)\"",
          "variationValues.*?color_name.*?\\[(.*?)\\]",
          "Farbe.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\"": " "
        },
        "regex": [
          "variationValues.*?color_name.*?\\[(.*?)\\]",
          "Farbe.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "sizes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\"": " "
        },
        "regex": [
          "variationValues.*?size_name.*?\\[(.*?)\\]"
        ]
      }
    },

    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Metallstempel <.*?<td.*?>(.*?)<\\/td>",
          "Material<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Material.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "length-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Länge <.*?<td.*>(.*?)cm <\\/td>"
        ]
      }
    },
    {
      "comment": "length-in-cm to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },
    {
      "comment": "lock-type",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "lock-type",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Verschluss.<.*?<td.*?>(.*?)<\\/td>"
        ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          "#productDescription span",
          "#feature-bullets .a-list-item",
          "div[data-a-expander-name='book_description_expander'] div p span, div[data-a-expander-name='book_description_expander'] .a-list-item span"
        ]
      }
    },
    {
      "comment": "color-images",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color-images",
        "sourceContextId": "single-product-view",
        "css-queries": [ "script" ],
        "mustContain": "'colorImages'"
      }
    },
    {
      "comment": "images-small",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "color-images",
        "regex": "thumb.*?(http.*?)\"",
        "replacements": {
          "\\.jpg.*": ".jpg"
        },
        "groupIndex": 1
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "color-images",
        "regex": "large.*?(http.*?)\"",
        "groupIndex": 1
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "color-images",
        "regex": "large.*?(http.*?)\"",
        "groupIndex": 1
      }
    },

    {
      "comment": "reference unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "referenceUnit",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*?\/": "",
          "\\)": ""
        },
        "css-queries": [ ".pricePerUnit" ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".pricePerUnit .a-offscreen" ]
      }
    },
    {
      "comment": "price per unit",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "is for adults",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "isForAdults",
        "sourceContextId": "single-product-view",
        "regex": "Nr\\..*?in <a.*?>Erotik.*?<\\/a>",
        "setValueOnMatch": true
      }
    },

    {
      "comment": "amount in stock",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "single-product-view",
        "regex": "noch (.*?) auf Lager"
      }
    },
    {
      "comment": "amount in stock",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "amountInStock",
        "sourceContextId": "amountInStock"
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "title-image" ],
        "informationIds": [
          "amountInStock",
          "asin",
          "author",
          "brand",
          "color",
          "colors",
          "description",
          "images-big",
          "images-small",
          "isForAdults",
          "length-in-cm",
          "link",
          "lock-type",
          "material",
          "mean",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "referenceUnit",
          "scent",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizes",
          "suitableFor",
          "title",
          "title-image",
          "minimumAge"
        ]
      }
    }
  ]
}
