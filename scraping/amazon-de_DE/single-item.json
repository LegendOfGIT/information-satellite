{
  "site": "amazon.de",

  "itemId": "{template.site}-{request.query.itemId}",

  "scraping": [
    {
      "comment": "merchant article number",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "mean",
        "value": "azo.{request.query.itemId}"
      }
    },
    {
      "comment": "asin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "asin",
        "value": "{request.query.itemId}"
      }
    },
    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://{template.site}/dp/{request.query.itemId}"
      }
    },
    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "https://www.{template.site}/dp/{request.query.itemId}"
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".priceToPay .a-offscreen",
          "#corePrice_desktop .a-price > span",
          "#price"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "css-queries": [
          ".priceBlockStrikePriceString",
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".basisPrice .a-offscreen",
          "#corePrice_desktop .a-price > span",
          ".priceToPay .a-offscreen",
          "#price"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },
    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#productTitle" ]
      }
    },
    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name=description]" ]
      }
    },
    {
      "comment": "seoKeywords",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "css-queries": [ "meta[name=description]" ]
      }
    },
    {
      "comment": "author",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "author",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".author a" ]
      }
    },
    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{author} {title}"
      }
    },

    {
      "comment": "usk-age",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<span>.*USK ab(.*)<\/span>",
          "Altersspektrum.*?<\\/span>.*?<span.*?>(.*?)-.*?<\\/span>"
        ]
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge",
        "defaultValue": 0
      }
    },

    {
      "comment": "make",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "make",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Marke<.*?<span.*?>(.*?)<\\/span>",
          "Marke<\\/span>.*?<span.*?>(.*?)<\\/span>"
        ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Farbe<\\/span>.*?<span.*?>(.*?)<\\/span>"
        ]
      }
    },

    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Metallstempel <.*?<td.*?>(.*?)<\\/td>",
          "Material<\\/span>.*?<span.*?>(.*?)<\\/span>"
        ]
      }
    },
    {
      "comment": "length-in-cm",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "LÃ¤nge <.*?<td.*>(.*?)cm <\\/td>"
        ]
      }
    },
    {
      "comment": "length-in-cm to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "length-in-cm",
        "sourceContextId": "length-in-cm"
      }
    },
    {
      "comment": "lock-type",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "lock-type",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Verschluss.<.*?<td.*?>(.*?)<\\/td>"
        ]
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "separator": " ",
        "css-queries": [
          "#productDescription span",
          "#feature-bullets .a-list-item",
          "div[data-a-expander-name='book_description_expander'] div p span, div[data-a-expander-name='book_description_expander'] .a-list-item span"
        ]
      }
    },
    {
      "comment": "color-images",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color-images",
        "sourceContextId": "single-product-view",
        "css-queries": [ "script" ],
        "mustContain": "'colorImages'"
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "color-images",
        "regex": "\"main\".*(https:.*jpg).*\"MAIN\"",
        "groupIndex": 1
      }
    },
    {
      "comment": "images-small",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "color-images",
        "regex": "thumb.*?(http.*?jpg)",
        "groupIndex": 1
      }
    },
    {
      "comment": "images-big",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "color-images",
        "regex": "large.*?(http.*?jpg)",
        "groupIndex": 1
      }
    },
    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "informationIds": [
          "asin",
          "author",
          "colors",
          "description",
          "images-big",
          "images-small",
          "length-in-cm",
          "link",
          "lock-type",
          "make",
          "material",
          "mean",
          "price-current",
          "price-initial",
          "seoDescription",
          "seoKeywords",
          "title",
          "title-image",
          "minimumAge"
        ]
      }
    }
  ]
}
