{
  "site": "amazon.de",

  "scraping": [
    {
      "comment": "random-page-number",
      "commandId": "generate-random-number",
      "parameters": {
        "contextId": "random-page-number",
        "maximum": "8"
      }
    },
    {
      "comment": "product-overview",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-overview",
        "uri": "https://{template.site}/gp/bestsellers/appliances/16075981/ref=zg_bs_nav_appliances_2_16075991?pg={random-page-number}"
      }
    },
    {
      "comment": "product-ids",
      "commandId": "get-values-by-css-queries",
      "parameters": {
        "contextId": "product-ids",
        "css-queries": [ ".p13n-sc-uncoverable-faceout"],
        "attribute-id": "id",
        "sourceContextId": "product-overview"
      }
    },
    {
      "comment": "site",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "site",
        "value": "amazon-de_DE"
      }
    },
    {
      "comment": "locale",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "locale",
        "value": "de-DE"
      }
    },
    {
      "comment": "usecase",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "usecase",
        "value": "single-item"
      }
    },
    {
      "comment": "navigation-path",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "navigation-path",
        "value": [
          "ELECTRONICS_AND_COMPUTERS",
          "ELECTRONICS_AND_COMPUTERS_LARGE_APPLIANCES",
          "ELECTRONICS_AND_COMPUTERS_LARGE_APPLIANCES_DRYERS"
        ]
      }
    },

    {
      "comment": "observe scraped information",
      "commandId": "observe-information",
      "parameters": {
        "informationIds": [
          "locale",
          "navigation-path",
          "product-ids",
          "site",
          "usecase"
        ]
      }
    }
  ]
}
