{
  "site": "amazon.de",

  "itemId": "{template.site}-{asin}",

  "scraping": [
    {
      "comment": "asin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "asin",
        "value": "{asin}"
      }
    },
    {
      "comment": "gtin",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "gtin",
        "value": "{request.query.itemId}"
      }
    },
    {
      "comment": "product-search",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "product-search",
        "uri": "https://{template.site}/s?k={request.query.itemId}"
      }
    },

    {
      "comment": "asin",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "asin",
        "sourceContextId": "product-search",
        "attribute-id": "data-asin",
        "css-queries": [ ".s-asin" ]
      }
    },

    {
      "comment": "link",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "link",
        "value": "https://www.{template.site}/dp/{asin}?th=1&psc=1"
      }
    },

    {
      "comment": "single-product-view",
      "commandId": "visit-uri",
      "parameters": {
        "contextId": "single-product-view",
        "uri": "{link}"
      }
    },
    {
      "comment": "price-current",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*von": ""
        },
        "css-queries": [
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".priceToPay .a-offscreen",
          "#corePrice_desktop .a-price > span",
          "#price",
          "#style_name_1_price .olpWrapper"
        ]
      }
    },
    {
      "comment": "price-initial",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "single-product-view",
        "replacements": {
          ".*von": ""
        },
        "css-queries": [
          ".priceBlockStrikePriceString",
          "#priceblock_ourprice",
          "#olp-new .a-color-price",
          ".basisPrice .a-offscreen",
          "#corePrice_desktop .a-price > span",
          ".priceToPay .a-offscreen",
          "#price",
          "#style_name_1_price .olpWrapper"
        ]
      }
    },
    {
      "comment": "price-current to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-current",
        "sourceContextId": "price-current"
      }
    },
    {
      "comment": "price-initial to float",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "price-initial",
        "sourceContextId": "price-initial"
      }
    },

    {
      "comment": "title",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "title",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#productTitle" ]
      }
    },
    {
      "comment": "size",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "size",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#inline-twister-dim-title-size_name #inline-twister-expanded-dimension-text-size_name" ]
      }
    },

    {
      "comment": "title",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "title",
        "value": "{title} {size}"
      }
    },


    {
      "comment": "number of ratings",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "numberOfRatings",
        "sourceContextId": "single-product-view",
        "css-queries": [ "#acrCustomerReviewText" ]
      }
    },
    {
      "comment": "number of ratings",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "numberOfRatings",
        "defaultValue": 0,
        "sourceContextId": "numberOfRatings"
      }
    },

    {
      "comment": "rating",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "ratingInPercent",
        "sourceContextId": "single-product-view",
        "attribute-id": "title",
        "css-queries": [ ".reviewCountTextLinkedHistogram" ]
      }
    },
    {
      "comment": "rating",
      "commandId": "set-context-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "replacements": {
          "von.*": ""
        },
        "value": "{ratingInPercent}"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "ratingInPercent",
        "defaultValue": 0,
        "sourceContextId": "ratingInPercent"
      }
    },
    {
      "comment": "rating",
      "commandId": "get-rule-of-three-value",
      "parameters": {
        "maximumValue": 5,
        "contextId": "ratingInPercent"
      }
    },

    {
      "comment": "description",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "description",
        "sourceContextId": "single-product-view",
        "css-queries": [
          "#productDescription p span, #productDescription span",
          "#feature-bullets .a-list-item"
        ]
      }
    },
    {
      "comment": "color-images",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "color-images",
        "sourceContextId": "single-product-view",
        "css-queries": [ "script" ],
        "mustContain": "'colorImages'"
      }
    },

    {
      "comment": "images-small",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-small",
        "sourceContextId": "color-images",
        "regex": "thumb.*?(http.*?)\"",
        "groupIndex": 1
      }
    },
    {
      "comment": "images-small",
      "commandId": "clone-items-and-modify-clones",
      "parameters": {
        "contextId": "images-small",
        "replacements": {
          "\\.jpg.*": ".jpg"
        },
        "sourceContextId": "images-small"
      }
    },

    {
      "comment": "images-big",
      "commandId": "get-values-by-regex",
      "parameters": {
        "contextId": "images-big",
        "sourceContextId": "color-images",
        "regex": "large.*?(http.*?)\"",
        "groupIndex": 1
      }
    },
    {
      "comment": "title-image",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "title-image",
        "sourceContextId": "color-images",
        "regex": "large.*?(http.*?)\"",
        "groupIndex": 1
      }
    },

    {
      "comment": "seoDescription",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "seoDescription",
        "sourceContextId": "single-product-view",
        "attribute-id": "content",
        "replacements": {
          "Amazon\\.de.*? - ": "",
          " - Kostenloser Versand.*": "",
          "bei Amazon.*": "bei WeWanna shop!"
        },
        "css-queries": [ "meta[name=description]" ]
      }
    },
    {
      "comment": "usk-age",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "<span>.*USK ab(.*)<\/span>"
        ]
      }
    },
    {
      "comment": "minimumAge",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "minimumAge",
        "sourceContextId": "minimumAge"
      }
    },

    {
      "comment": "brand",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "brand",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Marke<.*?<span.*?>(.*?)<\\/span>",
          "Marke<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Marke.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "colors",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "colors",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\"": " "
        },
        "regex": [
          "variationValues.*?color_name.*?\\[(.*?)\\]",
          "Farbe.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "material",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "material",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Metallstempel <.*?<td.*?>(.*?)<\\/td>",
          "Material<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Material.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },
    {
      "comment": "suitableFor",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "suitableFor",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "regex": [
          "Zielgruppe<.*?<span.*?>(.*?)<\\/span>",
          "Zielgruppe<\\/span>.*?<span.*?>(.*?)<\\/span>",
          "Zielgruppe.*?<\\/th.*?<td.*?>\\W.*?&lrm;(.*?)<"
        ]
      }
    },

    {
      "comment": "sizes",
      "commandId": "get-value-by-regex",
      "parameters": {
        "contextId": "sizes",
        "sourceContextId": "single-product-view",
        "groupIndex": 1,
        "replacements": {
          "\"": " "
        },
        "regex": [
          "variationValues.*?size_name.*?\\[(.*?)\\]"
        ]
      }
    },

    {
      "comment": "price per unit",
      "commandId": "get-value-by-css-queries",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "single-product-view",
        "css-queries": [ ".pricePerUnit .a-offscreen" ]
      }
    },
    {
      "comment": "price of one liter",
      "commandId": "get-float-from-value",
      "parameters": {
        "contextId": "pricePerUnit",
        "sourceContextId": "pricePerUnit"
      }
    },

    {
      "comment": "seoKeywords",
      "commandId": "extract-seo-keywords",
      "parameters": {
        "contextId": "seoKeywords",
        "sourceContextId": ["description", "title"]
      }
    },

    {
      "comment": "store scraped information",
      "commandId": "store-information",
      "parameters": {
        "requiredProperties": [ "title-image" ],
        "informationIds": [
          "asin",
          "brand",
          "colors",
          "description",
          "gtin",
          "images-big",
          "images-small",
          "link",
          "material",
          "numberOfRatings",
          "price-current",
          "price-initial",
          "pricePerUnit",
          "ratingInPercent",
          "seoDescription",
          "seoKeywords",
          "size",
          "sizes",
          "suitableFor",
          "title",
          "title-image",
          "minimumAge"
        ]
      }
    }
  ]
}
